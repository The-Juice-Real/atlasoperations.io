    <script>
        (function () {
            const countdownElement = document.getElementById('countdown');
            if (!countdownElement) return;

            const calculateNextSunday = () => {
                const now = new Date();
                const nextSunday = new Date(now);
                nextSunday.setDate(now.getDate() + (7 - now.getDay()) % 7);
                nextSunday.setHours(23, 59, 59, 999); 
                // If it's already past midnight on Sunday, target next week's Sunday
                if (now.getDay() === 0 && now.getHours() === 0 && now.getMinutes() === 0 && now.getSeconds() === 0){
                     // it's exactly midnight, do nothing special
                } else if (now.getDay() === 0) { // If it is Sunday, but not midnight
                     nextSunday.setDate(now.getDate()); // Target today
                     nextSunday.setHours(23, 59, 59, 999);
                }
                return nextSunday;
            };

            const countdownDate = calculateNextSunday().getTime();

            const interval = setInterval(function() {
                const now = new Date().getTime();
                const distance = countdownDate - now;

                const days = Math.floor(distance / (1000 * 60 * 60 * 24));
                const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
                const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
                const seconds = Math.floor((distance % (1000 * 60)) / 1000);

                document.getElementById('days').innerText = days;
                document.getElementById('hours').innerText = hours;
                document.getElementById('minutes').innerText = minutes;
                document.getElementById('seconds').innerText = seconds;

                if (distance < 0) {
                    // This will reset the timer for the next week automatically after it expires
                    const nextWeekDate = new Date(countdownDate + 7 * 24 * 60 * 60 * 1000);
                    countdownDate = nextWeekDate.getTime();
                }
            }, 1000);
        })();
    </script>

